<Window x:Class="Configurate.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Configurate"
        mc:Ignorable="d"
        Title="Login" Height="400" Width="300" FontSize="14" Background="White"
        Closing="OnWindowExit">
    <Border Background="#2e3137" CornerRadius="20" Margin="20">
        <StackPanel Margin="20">
            <Label Content="Login" Foreground="White" FontSize="25" HorizontalAlignment="Center"/>
            <Separator></Separator>
            
            <Label Content="Username" Foreground="White"/>
            <TextBox x:Name="UsernameTextBox" Background="#545d6a" Foreground="White" FontSize="18"/>

            <Label Content="Password" Margin="0 10 0 0" Foreground="White"/>
            <PasswordBox x:Name="PasswordTextBox" Background="#545d6a" Foreground="White" FontSize="18"/>

            <Button x:Name="SubmitButton" Content="Submit" IsDefault="True" Margin="60 80" Background="#545d6a" Foreground="White" FontSize="13" Click="SubmitButton_Click"></Button>
        </StackPanel>
    </Border>
</Window>
