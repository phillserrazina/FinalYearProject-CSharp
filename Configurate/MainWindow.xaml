<Window x:Class="Configurate.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Configurate"
        mc:Ignorable="d"
        Title="Configurate" Height="450" Width="800">

    <Window.Resources>
        <Style TargetType="Image">
            <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
        </Style>
    </Window.Resources>
    
    <Grid x:Name="MainGrid">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="6*"/>
        </Grid.ColumnDefinitions>
        <GroupBox x:Name="ApplicationsGroupBox" Header="My Applications" Grid.Column="0" Visibility="Visible">
            <ListBox x:Name="ApplicationsListBox" HorizontalContentAlignment="Stretch"/>
        </GroupBox>

        <GroupBox x:Name="ShareGroupBox" Header="Shared *Application* Settings" Grid.Column="0" Visibility="Hidden">
            <ListBox x:Name="ShareListBox" HorizontalContentAlignment="Stretch"/>
        </GroupBox>

        <GroupBox x:Name="SettingsGroupBox" Header="Select an Application" Grid.Column="1">
            <Grid x:Name="SettingsHoldGrid" Visibility="Hidden">

                <Grid.RowDefinitions>
                    <RowDefinition Height="8.6*"/>
                    <RowDefinition Height="1.4*"/>
                </Grid.RowDefinitions>
                
                <ListBox x:Name="SettingsListBox" HorizontalContentAlignment="Stretch" Grid.Row="0">

                    <Grid Height="20">

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="7*"/>
                        </Grid.ColumnDefinitions>

                    </Grid>

                </ListBox>

                <ListBox x:Name="SettingsButtonBox" HorizontalContentAlignment="Stretch" VerticalContentAlignment="Stretch" Grid.Row="1" Background="#FFE2E2E2">
                    <Grid x:Name="SettingsButtonGrid" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                        
                        <Grid.RowDefinitions>
                            <RowDefinition Height="5*"/>
                            <RowDefinition Height="5*"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                            <ColumnDefinition Width="3*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="SaveButton" Content="Save" Grid.Column="0" Grid.Row="0" Margin="2"/>
                        <Button x:Name="ExportButton" Content="Export" Grid.Column="1" Grid.Row="0" Margin="2"/>
                        <Button x:Name="ImportButton" Content="Import" Grid.Column="2" Grid.Row="0" Margin="2"/>

                        <Button x:Name="OpenLocationButton" Content="Open Location" Grid.Column="0" Grid.Row="1" Margin="2"/>
                        <Button x:Name="EditButton" Content="Edit Location" Grid.Column="1" Grid.Row="1" Margin="2"/>
                        <Button x:Name="CloseButton" Content="Close" Grid.Column="2" Grid.Row="1" Margin="2"/>

                    </Grid>
                </ListBox>
            </Grid>

        </GroupBox>
    </Grid>
</Window>
